#include <iostream>
using namespace std;
int main(){
 
    int n, max = 0;
    cin >> n;
    int a[n];
 
    for(int i = 0; i < n; i++){
        cin >> a[i];
    }
 
    for(int i = 0; i < n; i++){
        if(i != 0 && i <= n - 2){
            if(a[i] + a[i+1] + a[i-1] > max){
                max = a[i] + a[i+1] + a[i-1];
            }
        }
        else if(i == 0){
            if(a[i] + a[i+1] + a[n-1] > max){
                max = a[i] + a[i+1] + a[n-1];
            }
        }
        else if(i == n - 1){
            if(a[i] + a[i-1] + a[0] > max){
                max = a[i] + a[i-1] + a[0];
            }
        }
    }
 
    cout << max;
 
    return 0;
}
