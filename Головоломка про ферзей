#include <iostream>
using namespace std;
int main(){
 
    int n, ans = 0, in = 3;
    cin >> n;
 
    if(n >= 1 && n <= 100){
        int i = 2;
        while(1){
            ans = ans + i;
            if(n == in){
                cout << ans;
                break;
            }
            else if(n > 0 && n < 3){
                cout << 0;
                break;
            }
            in++;
            i = i + 2;
        }
    }
 
    return 0;
}
